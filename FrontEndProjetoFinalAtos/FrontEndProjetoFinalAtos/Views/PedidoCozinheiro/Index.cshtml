@using FrontEndProjetoFinalAtos.ViewsModels;
@model PedidoViewModel


@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/PedidoCozinheiro/pedido-cozinheiro.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300&display=swap" rel="stylesheet">

</head>


<body>


    <div id="box-pedidos">
        <h1>PEDIDOS</h1>

        <ul>
            @if (Model.Pedidos  != null){
            @foreach (var pedido in Model.Pedidos){
            <li>

                <p id="p-li">Mesa @pedido.Mesa</p>
                        <button onclick="dadosModal(@pedido.Mesa,@pedido.Id)" class="button-detalhes" data-bs-toggle="modal" data-bs-target="#exampleModal">Detalhes</button>
            </li>
            }
            }

        </ul>


    </div>



    <img src="~/img/Elipse.svg">


    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-modal-header">
                    <h5 class="modal-titulo">PEDIDO<span id="titulo-id"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                    <div class="box-modal-body">

                        <p id="p-modal"></p>


                    <ul id="lista-dados">

                        </ul>
                        
                    </div>
                    <div class="box-modal-footer">
                        <button type="button" class="button-cancelar-modal" data-bs-dismiss="modal">Cancelar</button>



                        <button type="submit" class="button-confirmar-modal">Confirmar</button>
              
            </div>
        </div>
    </div>

    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/PedidoCozinheiro/pedido-cozinheiro.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>